@model IEnumerable<DapperORM_MVC.Domain.Models.Product>
@{
    ViewBag.Title = "Home Page";
}

@for (var i = 0; i < Model.ToList().Count; i++)
{
    var item = Model.ToList()[i];

    if (i % 3 == 0)
    {
        @:<div class="row">
        }

        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="https://placeholder.com/200x200" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@item.ProductName</h5>
                <p class="card-text">@item.UnitPrice$</p>
            </div>
        </div>

        if (i % 3 == 2)
        {
        @:</div>
    }
}