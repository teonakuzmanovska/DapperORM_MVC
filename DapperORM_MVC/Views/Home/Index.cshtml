@model IEnumerable<DapperORM_MVC.Domain.Models.Product>
@{
    ViewBag.Title = "Home Page";
}

<div class="row d-flex justify-content-center align-items-center" style="padding-top: 20px;">
    @for (var i = 0; i < Model.ToList().Count; i++)
    {
        var item = Model.ToList()[i];

        <div class="text-center panel panel-default col-md-3 d-flex align-items-center justify-content-center" style="margin: 10px;padding: 0px; width: 25rem">
            <div class="panel-body">
                <img src="https://hatrabbits.com/wp-content/uploads/2017/01/random.jpg" class="img-responsive" alt="Card Image">
                <h5>@item.ProductName</h5>
                <p>@item.UnitPrice$</p>
            </div>
        </div>
    }
</div>
